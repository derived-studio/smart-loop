{
  "basePath": "./src/",
  "compileOnSave": true,
  "compilerOptions": {
      "module": "none",
      "target": "ES2018",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "allowJs": true,
      "noEmit": true,
      "alwaysStrict": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "dist",
      "moduleResolution": "Node",
      "declaration": false,
      "lib": [ "dom", "es6", "es2018" ]
  },
  "include": [
      "./src/*.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
